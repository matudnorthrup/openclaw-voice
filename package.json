{
  "name": "openclaw-voice",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc && cp src/channels.json dist/channels.json",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:slice2": "vitest run test/slice2-silence.test.ts",
    "test:slice3": "vitest run test/slice3-whisper.test.ts",
    "test:slice4": "vitest run test/slice4-claude.test.ts",
    "test:slice5": "vitest run test/slice5-elevenlabs.test.ts",
    "test:slice6": "vitest run test/slice6-pipeline.test.ts",
    "test:flows": "vitest run test/interaction-flow-harness.test.ts",
    "test:intents": "vitest run test/intent-robustness-matrix.test.ts",
    "flows:report": "npm run build --silent && node dist/testing/flow-report.js",
    "flows:stress": "npm run build --silent && node dist/testing/stress-flow-report.js",
    "flows:stress:inbox": "npm run build --silent && node dist/testing/stress-inbox-report.js",
    "flows:stress:all": "npm run flows:stress && npm run flows:stress:inbox",
    "e2e:live": "npm run build --silent && node dist/testing/e2e-live-report.js",
    "e2e:voice-loop": "npm run build --silent && node dist/testing/e2e-voice-loop-report.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "OpenClaw Voice â€” hands-free Discord voice bot for conversational AI",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.19.0",
    "@snazzah/davey": "^0.1.9",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.4",
    "ffmpeg-static": "^5.3.0",
    "openai": "^6.18.0",
    "prism-media": "^1.3.5",
    "sodium-native": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
